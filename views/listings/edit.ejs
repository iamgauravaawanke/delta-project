<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <br/><br/>
    <h3>Edit Your Listing</h3>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"  class=" needs-validation" novalidate enctype="multipart/form-data" >   
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input 
          type="text" 
          name="listing[title]" 
          id="title"
          value="<%= listing.title %>" 
          class="form-control"
          required
        />
          <div class="valid-feedback">
      Title  Looks good!
    </div>
      </div>

      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea 
          name="listing[description]" 
          id="description" 
          class="form-control"
          required
          >
          <%= listing.description %></textarea>

          <div class="invalid-feedback">
          Please enter a short description
          </div>
      </div>
      <div class="mb-3">
        Original Listings Image <br/>
        <img src="<%= originalImageUrl %>"/>
      </div>

     <div class="mb-3">
  <lable for="image" class="form-label">  Upload Listings Image</lable>
<input 
  type="file" 
  id="image"
  name="listing[image][url]" 
  value="<%= listing.image?.url %>" 
  class="form-control"
  
/>

</div>
<div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input 
            type="number" 
            name="listing[price]" 
            id="price"
            value="<%= listing.price %>" 
            class="form-control" 
            required
          />
              <div class="invalid-feedback">
          Please enter valid price
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input 
            type="text" 
            name="listing[country]" 
            id="country"
            value="<%= listing.country %>" 
            class="form-control"
            required
          />
        </div>
   <div class="invalid-feedback">
          Country name should be valid
          </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input 
          type="text" 
          name="listing[location]" 
          id="location"
          value="<%= listing.location %>" 
          class="form-control"
          required
        />
        <div class="invalid-feedback">
          Location name should be valid   
        </div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">ADD</button>
    </form>
  </div>
</div>


